@model Category

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Update Category</h1>
            </div>
            <form asp-controller="Category" asp-action="Update" asp-route-id="@Model.Id"  method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <strong>Category Name:</strong>
                    <input asp-for="Name" class="d-block w-100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div>
                    <input type="submit" class="btn btn-small btn-success" value="Update">
                </div>
            </form>
        </div>
    </div>
</div>

