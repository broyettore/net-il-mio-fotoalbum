@model Category

<div class="container px-0">
    <div class="mb-5 header-anchor">
        <h2 class="ms-header fs-1">Update Category</h2>
    </div>
    <form asp-controller="Category" asp-action="Update" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="mb-4">
            <strong>Category Name:</strong>
            <input asp-for="Name" class="d-block w-100" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Photos" class="form-control" name="Photos">

        <div>
            <input type="submit" class="btn my-btn" value="Update">
        </div>
    </form>
</div>

