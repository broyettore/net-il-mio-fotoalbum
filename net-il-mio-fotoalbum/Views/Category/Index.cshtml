@{
    Layout = "_Layout";
}

@model List<Category>

@if (Model.Count() == 0)
{
    <h3>There are no categories to show</h3>
}
else
{

    <div class="container py-3">
        <h1 class="mb-3">Photo Gallery</h1>

        @if (User.IsInRole("ADMIN"))
        {
            <a class="btn my-5 custom-link"
               href="@Url.Action("Create", "Category")">
                Create a New Category
            </a>
        }

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Category Name</th>
                    @if (User.IsInRole("ADMIN"))
                    {
                        <th scope="col">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                    <tr>
                        <th scope="row">@category.Id</th>
                        <td>@category.Name</td>
                        @if (User.IsInRole("ADMIN"))
                        {
                            <th scope="col">
                                <a class="btn btn primary custom-link" href="@Url.Action("Update", "Category", new { id = category.Id })">Edit Photo</a>
                                <form asp-controller="Photo" asp-action="Delete" asp-route-id="@category.Id" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn my-btn btn-sm">
                                        Delete Category
                                    </button>
                                </form>
                            </th>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

